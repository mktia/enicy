        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearance"
            tools:text="\@enicy_official" />

    </LinearLayout>

</LinearLayout>